<%= render "shared/navbar" %>
<% if user_signed_in? %>
  <h3>Hello <%= @user.first_name %> <%= @user.last_name %>!</h3>
  <h5>Your previous contributions:</h5>
  <% @recs.each do |post| %>
    <p><%= link_to post.title, post %></p>
  <% end %>

<% else %>
  
  <h4>Hi! I'm <%= @user.first_name.humanize %></h4>
  <p>Fork Version</p>
  <p><%= @user.profile_city %>, <%= @user.profile_state %></p>
  <p>See my recommendations (<%= @count %>):</p>
  <% @recs.each do |rec| %>
    <p><%= link_to rec.title, rec %></p>
  <% end %>

<% end %>